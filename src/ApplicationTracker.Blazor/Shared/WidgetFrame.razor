<div class="border p-0 w-100">
    <div class="bg-light p-1">
        @if (Size == Size.Small)
        {
            <h5>@Title</h5>
        }
        else
        {
            <h3>@Title</h3>
        }
    </div>
    <div class="p-1">
        @ChildContent
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public Size Size { get; set; } = Size.Small;
}
